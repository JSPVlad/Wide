<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/Torrent_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:padding="12dp"
        android:text="Torrent_Title"
        android:textColor="@android:color/tertiary_text_light"
        app:layout_constraintEnd_toStartOf="@id/seed_peer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seed_peer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/Torrent_Size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/upward_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/downward_arrow"
            />
        <TextView
            android:id="@+id/upward_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="@id/upward_arrow"
            app:layout_constraintBottom_toBottomOf="@id/upward_arrow"
            app:layout_constraintStart_toEndOf="@id/upward_arrow"
            android:text="10"
            android:textColor="@android:color/tertiary_text_light"

            />
        <ImageView
            android:id="@+id/downward_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/upward_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            />
        <TextView
            android:id="@+id/downward_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="@id/downward_arrow"
            app:layout_constraintStart_toEndOf="@id/downward_arrow"
            app:layout_constraintBottom_toBottomOf="@id/downward_arrow"
            android:text="10000"
            android:textColor="@android:color/tertiary_text_light"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/Torrent_Size"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/tertiary_text_light"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Torrent_Size"
            android:textAlignment="center"
            android:padding="2dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/comfortaa_light"
            />
</androidx.constraintlayout.widget.ConstraintLayout>